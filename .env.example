# ============================================
# IKODIO - Environment Variables Configuration
# ============================================
# Copy this file to .env.local and update the values
# For production deployment, set these in Vercel Dashboard

# ============================================
# REQUIRED - Core Application
# ============================================

# Node Environment (development | production)
NODE_ENV=development
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# ============================================
# REQUIRED - Finnhub Stock Market API
# ============================================
# Register: https://finnhub.io/register
# Free Tier: 60 API calls/minute
# NEXT_PUBLIC_ = Client-side access
# Without prefix = Server-side only

NEXT_PUBLIC_FINNHUB_API_KEY=your_finnhub_api_key_here
FINNHUB_API_KEY=your_finnhub_api_key_here
FINNHUB_BASE_URL=https://finnhub.io/api/v1

# ============================================
# REQUIRED - Database Connection
# ============================================
# Development: SQLite (file:./prisma/dev.db)
# Production: PostgreSQL recommended
# Example PostgreSQL: postgresql://user:password@host:5432/dbname

DATABASE_URL="file:./prisma/dev.db"

# ============================================
# REQUIRED - Authentication (Better Auth)
# ============================================
# Generate secret: openssl rand -base64 32
# BETTER_AUTH_URL must match your domain

BETTER_AUTH_SECRET=your_random_secret_min_32_chars
BETTER_AUTH_URL=http://localhost:3000

# ============================================
# REQUIRED - Google Gemini AI
# ============================================
# Get API Key: https://makersuite.google.com/app/apikey
# Used for AI-powered stock predictions and analysis

GEMINI_API_KEY=your_gemini_api_key_here

# ============================================
# OPTIONAL - Email Service (Nodemailer)
# ============================================
# For Gmail: Use App Password (not regular password)
# https://myaccount.google.com/apppasswords

NODEMAILER_EMAIL=your_email@gmail.com
NODEMAILER_PASSWORD=your_app_password_here

# ============================================
# OPTIONAL - Background Jobs (Inngest)
# ============================================
# Only needed for scheduled tasks and background processing

INNGEST_EVENT_KEY=
INNGEST_SIGNING_KEY=